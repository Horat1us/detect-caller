{
  "name": "horat1us/detect-caller",
  "description": "Util to detect caller of current method/function.",
  "type": "library",
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "horat1us",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4 | ^8"
  },
  "autoload": {
    "psr-4": {
      "Horat1us\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit"
  }
}
